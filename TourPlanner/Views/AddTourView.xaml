<UserControl x:Class="TourPlanner.Views.AddTourView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Background="#5295C4">
            <Border BorderBrush="Black" BorderThickness="1">
                <Button Content="+" Background="Transparent" FontSize="25" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Command="{Binding SaveTourCommand}"/>
            </Border>
        </Grid>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Background="#064F89">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Tour Name" Grid.Row="0" Grid.Column="0" Foreground="#E3D7C2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="From" Grid.Row="0" Grid.Column="1" Foreground="#E3D7C2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="To" Grid.Row="0" Grid.Column="2" Foreground="#E3D7C2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Description" Grid.Row="0" Grid.Column="3" Foreground="#E3D7C2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Transport" Grid.Row="0" Grid.Column="4" Foreground="#E3D7C2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <Grid Background="LightGray" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="1" Grid.Column="0">
                    <TextBox x:Name="AddName" Text="{Binding AddTourName, UpdateSourceTrigger=PropertyChanged}" Margin="1" Background="#E3D7C2"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="1">
                    <TextBox x:Name="AddFrom" Text="{Binding AddTourFrom, UpdateSourceTrigger=PropertyChanged}" Margin="1" Background="#E3D7C2"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="2">
                    <TextBox x:Name="AddTo" Text="{Binding AddTourTo, UpdateSourceTrigger=PropertyChanged}" Margin="1" Background="#E3D7C2"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="3">
                    <TextBox x:Name="AddDescription" Text="{Binding AddTourDescription, UpdateSourceTrigger=PropertyChanged}" Margin="1" Background="#E3D7C2"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="4">
                    <ComboBox x:Name="AddTransport" SelectedItem="{Binding AddTourTransport, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="1"
                              ItemsSource="{Binding TransportTypes}" Background="#E3D7C2"/>
                </Border>
            </Grid>
        </Grid>


    </Grid>
</UserControl>